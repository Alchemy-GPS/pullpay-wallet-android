<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".mvp.appeal.AppealActivity">

    <RelativeLayout
        android:id="@+id/appeal_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/appeal_title_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/arr_left_dark" />
        </RelativeLayout>

        <org.payio.customview.TitleTextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/appeal_title"
            android:textColor="@color/main_tab_text_ed"
            android:textSize="20dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/appeal_title_bar"
        android:background="@color/grey_F2" />

    <RelativeLayout
        android:id="@+id/appeal_image_picker_layout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/appeal_image_picker_background">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/image_picker" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/appeal_image_display"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/image_border_background"
        android:padding="1dp"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <TextView
        android:id="@+id/appeal_upload_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appeal_image_picker_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/appeal_upload_tips"
        android:textColor="@color/grey_A"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/appeal_upload"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_blue_background"
        android:gravity="center"
        android:text="@string/appeal_upload"
        android:textColor="@color/white"
        android:textSize="18dp" />

</RelativeLayout>
