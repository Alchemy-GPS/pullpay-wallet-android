<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.payio.customview.SlidingTabLayout
        android:id="@+id/fragment_otc_buy_customlayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        app:tabIndicatorHeight="4dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabTextColor ="@color/grey_A"
        app:tabSelectedTextColor="@color/blue_theme"
        app:tabMaxWidth="0dp"
        app:drawableResId="@drawable/otc_tablayout_indicator" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_otc_buy_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>